+function getLoaderGroupId(): number | null {
+  const raw = String(LOADER_GROUP_ID || process.env.LOADER_GROUP_ID || '').trim();
+  if (!raw) return null;
+  const parts = raw.split(',').map(s => Number(s.trim())).filter(n => Number.isFinite(n));
